---
// import Sidebar from "./sidebar.astro";
const { title } = Astro.props;
const links = [
  {
    path: "diff-word",
    label: "Diff Word",
  },
  {
    path: "extract-urls",
    label: "Extract URLs",
  },
];
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body>
    <div class="flex">
      <aside class="bg-surface3 w-col-span-3 h-screen p-24">
        <h2 class="typography-16 font-bold">tools</h2>
        <ul class="list-disc">
          {
            links.map(({ path, label }) => (
              <li class="ml-24 hover:bg-surface3-hover">
                <a
                  href={`${import.meta.env.BASE_URL}${path}`}
                  class="typography-16 text-link1 hover:text-link1-hover active:text-link1-press focus:text-link1-outline w-full inline-block"
                >
                  {label}
                </a>
              </li>
            ))
          }
        </ul>
      </aside>
      <main class="w-full p-24">
        <h1 class="typography-32 font-bold">{title}</h1>
        <slot />
      </main>
    </div>
  </body>
</html>
